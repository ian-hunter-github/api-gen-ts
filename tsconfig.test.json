{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
